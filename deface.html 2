<script>
// Script untuk memastikan audio otomatis diputar
document.addEventListener('DOMContentLoaded', function() {
    const audio = document.querySelector('audio');
    
    // Coba putar audio
    const playAudio = function() {
        audio.play().catch(function(error) {
            console.log('Auto-play prevented:', error);
            // Coba lagi setelah interaksi pengguna
            document.body.addEventListener('click', function playOnce() {
                audio.play();
                document.body.removeEventListener('click', playOnce);
            });
        });
    };
    
    // Tunggu sedikit untuk memastikan halaman dimuat
    setTimeout(playAudio, 500);
    
    // EFEK ERROR RANDOM PADA TEKS
    const errorTexts = document.querySelectorAll('.title, .subtitle, i, marquee');
    
    function triggerRandomError() {
        const randomElement = errorTexts[Math.floor(Math.random() * errorTexts.length)];
        const originalHTML = randomElement.innerHTML;
        
        // Simulasi error dengan karakter acak
        if(Math.random() > 0.7) {
            const chars = '!@#$%^&*()_+-=[]{}|;:,.<>?/~`';
            const text = randomElement.textContent;
            let newText = '';
            
            for(let i = 0; i < text.length; i++) {
                if(Math.random() > 0.8 && chars.includes(text[i]) === false) {
                    newText += chars[Math.floor(Math.random() * chars.length)];
                } else {
                    newText += text[i];
                }
            }
            
            randomElement.textContent = newText;
            
            // Kembalikan ke original setelah delay
            setTimeout(() => {
                randomElement.innerHTML = originalHTML;
            }, 100 + Math.random() * 400);
        }
    }
    
    // Trigger error random setiap 2-5 detik
    setInterval(triggerRandomError, 2000 + Math.random() * 3000);
    
    // EFEK FLICKER RANDOM PADA ELEMEN
    function randomFlicker() {
        document.querySelectorAll('*').forEach(el => {
            if(Math.random() > 0.99 && el !== document.body) {
                const originalOpacity = window.getComputedStyle(el).opacity;
                el.style.opacity = '0.3';
                
                setTimeout(() => {
                    el.style.opacity = originalOpacity;
                }, 50 + Math.random() * 150);
            }
        });
    }
    
    setInterval(randomFlicker, 500);
    
    // EFEK SHAKE RANDOM
    function randomShake() {
        if(Math.random() > 0.95) {
            document.body.style.transform = `translate(${Math.random() * 10 - 5}px, ${Math.random() * 10 - 5}px)`;
            
            setTimeout(() => {
                document.body.style.transform = 'translate(0, 0)';
            }, 100);
        }
    }
    
    setInterval(randomShake, 1000);
});

// Tambahkan style untuk animasi tambahan
const style = document.createElement('style');
style.textContent = `
    @keyframes colorShift {
        0%, 100% { color:red; }
        33% { color:#ff4444; }
        66% { color:#ff0000; }
    }
    
    @keyframes textFlicker {
        0%, 100% { opacity:1; }
        97% { opacity:1; }
        98% { opacity:0.5; }
        99% { opacity:1; }
    }
    
    .title span {
        display:inline-block;
        animation:colorShift 3s infinite, shake 0.5s infinite;
    }
    
    @keyframes shake {
        0%, 100% { transform:translateX(0); }
        25% { transform:translateX(-1px); }
        75% { transform:translateX(1px); }
    }
`;
document.head.appendChild(style);
</script>

